{
  "name": "r2",
  "version": "2.4.0",
  "main": "index.js",
  "license": "MIT",
  "scripts": {
    "prestart": "npm run build",
    "start": "node ./dist | node ./dist/transport",

    "test": "npm run cov && cat ./coverage/lcov.info | coveralls",
    "posttest": "npm run lint",
    "jest": "jest --runInBand",
    "cov": "jest --runInBand --coverage",
    "lint": "tslint -p .",

    "build": "rimraf dist && tsc",
    "deploy": "gcloud app deploy",

    "clearPairs": "ts-node ./tools/clearPairs.ts",
    "getBalance": "ts-node ./tools/getBalance.ts",
    "closeCcPosition": "ts-node ./tools/closeCcPosition.ts",
    "closeBfPosition": "ts-node ./tools/closeBfPosition.ts",
    "closeQuPosition": "ts-node ./tools/closeQuPosition.ts",
    "closeAll": "npm run closeCcPosition && npm run closeBfPosition && npm run closeQuPosition && npm run clearPairs && npm run getBalance"
  },
  "dependencies": {
    "@bitr/awaitable-event-emitter": "^1.0.3",
    "@bitr/bitbankcc": "^1.0.5",
    "@bitr/bitflyer-fx": "^1.0.4",
    "@bitr/btcbox": "^1.0.3",
    "@bitr/castable": "^1.0.3",
    "@bitr/chronodb": "^1.0.2",
    "@bitr/logger": "^1.0.1",
    "@bitr/zmq": "^1.1.0",
    "chalk": "^2.3.0",
    "core-decorators": "^0.20.0",
    "date-fns": "^1.28.5",
    "decimal.js": "^10.2.0",
    "express": "^4.16.2",
    "fast-json-parse": "^1.0.3",
    "i18next": "^19.3.4",
    "inversify": "^4.3.0",
    "jsonwebtoken": "^8.5.1",
    "lodash": "^4.17.13",
    "luxon": "^1.22.2",
    "mkdirp": "^0.5.1",
    "node-fetch": "^1.7.3",
    "opn": "^5.2.0",
    "pino": "^6.0.0",
    "reflect-metadata": "^0.1.10",
    "simple-statistics": "^5.2.1",
    "split2": "^3.1.1",
    "uuid": "^3.1.0",
    "ws": "^4.0.0",
    "zeromq": "^4.6.0"
  },
  "devDependencies": {
    "@types/chalk": "^2.2.0",
    "@types/decimal.js": "^7.4.0",
    "@types/express": "^4.11.1",
    "@types/i18next": "^8.4.2",
    "@types/jest": "^21.1.4",
    "@types/jsonwebtoken": "^7.2.3",
    "@types/lodash": "^4.14.149",
    "@types/luxon": "^0.2.2",
    "@types/nock": "^8.2.1",
    "@types/node": "^8.0.53",
    "@types/node-fetch": "^1.6.7",
    "@types/pino": "^4.7.0",
    "@types/split2": "^2.1.6",
    "@types/uuid": "^7.0.2",
    "@types/ws": "^4.0.1",
    "@types/zeromq": "^4.5.3",
    "@types/opn": "^5.1.0",
    "coveralls": "^3.0.11",
    "cpy-cli": "^1.0.1",
    "jest": "^21.0.0",
    "nock": "^9.0.24",
    "rimraf": "^2.6.2",
    "ts-jest": "^21.0.0",
    "ts-node": "^8.5.4",
    "tslint": "^5.8.0",
    "typescript": "2.6.2"
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "testRegex": "/__tests__/.*\\.test\\.(jsx?|tsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json"
    ],
    "mapCoverage": true,
    "collectCoverageFrom": [
      "**/*.{ts,tsx}",
      "!src/index.ts",
      "!src/transport/index.ts",
      "!src/analytics/index.ts",
      "!src/container.config.ts",
      "!**/__tests__/**",
      "!**/node_modules/**",
      "!**/vendor/**",
      "!tools/**",
      "!webui/**"
    ]
  }
}
