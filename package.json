{
  "name": "r2",
  "version": "2.4.0",
  "main": "index.js",
  "license": "MIT",
  "scripts": {
    "postinstall": "npm install --prefix ./webui",
    "start": "node ./dist | node ./dist/transport",
    "test": "jest --runInBand",
    "cov": "jest --runInBand --coverage && cat ./coverage/lcov.info | coveralls",
    "lint": "tslint -p . && npm run lint --prefix ./webui",
    "build": "rimraf dist && tsc && npm run build --prefix ./webui",
    "deploy": "gcloud app deploy",
    "clearPairs": "ts-node ./tools/clearPairs.ts",
    "getBalance": "ts-node ./tools/getBalance.ts",
    "closeCcPosition": "ts-node ./tools/closeCcPosition.ts",
    "closeBfPosition": "ts-node ./tools/closeBfPosition.ts",
    "closeQuPosition": "ts-node ./tools/closeQuPosition.ts",
    "closeAll": "npm run closeCcPosition && npm run closeBfPosition && npm run closeQuPosition && npm run clearPairs && npm run getBalance"
  },
  "dependencies": {
    "@bitr/awaitable-event-emitter": "^1.0.3",
    "@bitr/bitbankcc": "^1.0.6",
    "@bitr/bitflyer-fx": "^1.0.4",
    "@bitr/btcbox": "^1.0.3",
    "@bitr/castable": "^1.0.3",
    "@bitr/chronodb": "github:matken11235/chronodb",
    "@bitr/logger": "^1.0.1",
    "@bitr/zmq": "github:matken11235/zmq",
    "chalk": "^4.0.0",
    "core-decorators": "^0.20.0",
    "date-fns": "^2.12.0",
    "decimal.js": "^10.2.0",
    "express": "^4.17.1",
    "fast-json-parse": "^1.0.3",
    "i18next": "^19.4.4",
    "inversify": "^5.0.1",
    "jsonwebtoken": "^8.5.1",
    "lodash": "^4.17.15",
    "luxon": "^1.23.0",
    "mkdirp": "^1.0.4",
    "node-fetch": "^2.6.0",
    "open": "^7.0.3",
    "pino": "^6.2.1",
    "reflect-metadata": "^0.1.13",
    "simple-statistics": "^7.0.9",
    "split2": "^3.1.1",
    "tsargs": "^1.4.0",
    "tslint": "^6.1.2",
    "uuid": "^8.0.0",
    "ws": "^7.2.5",
    "zeromq": "^5.2.0"
  },
  "devDependencies": {
    "@types/express": "^4.17.6",
    "@types/jest": "^25.2.1",
    "@types/jsonwebtoken": "^8.3.9",
    "@types/lodash": "^4.14.150",
    "@types/luxon": "^1.22.0",
    "@types/node": "^13.13.4",
    "@types/node-fetch": "^2.5.7",
    "@types/pino": "^6.0.0",
    "@types/split2": "^2.1.6",
    "@types/uuid": "^7.0.3",
    "@types/ws": "^7.2.4",
    "@types/zeromq": "^4.6.3",
    "coveralls": "^3.1.0",
    "cpy-cli": "^3.1.1",
    "jest": "^25.5.4",
    "nock": "^12.0.3",
    "prettier": "^2.0.5",
    "rimraf": "^3.0.2",
    "ts-jest": "^25.4.0",
    "ts-node": "^8.9.1",
    "typescript": "3.8.3"
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "/__tests__/.*\\.test\\.(jsx?|tsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json"
    ],
    "collectCoverage": true,
    "collectCoverageFrom": [
      "**/*.{ts,tsx}",
      "!src/index.ts",
      "!src/transport/index.ts",
      "!src/analytics/index.ts",
      "!src/container.config.ts",
      "!**/__tests__/**",
      "!**/node_modules/**",
      "!**/vendor/**",
      "!tools/**",
      "!webui/**"
    ]
  }
}
